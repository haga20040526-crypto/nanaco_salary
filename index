<script>
    function calculatePay() {
        // 1. å…¥åŠ›å€¤ã®å–å¾—
        const wage = parseInt(document.getElementById('hourlyWage').value);
        const startStr = document.getElementById('startTime').value;
        const endStr = document.getElementById('endTime').value;
        const breakMins = parseInt(document.getElementById('breakTime').value) || 0;

        if (!wage || !startStr || !endStr) {
            alert("ã™ã¹ã¦ã®é …ç›®ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„");
            return;
        }

        // 2. æ™‚é–“ã‚’ã€Œåˆ†ã€ã«å¤‰æ›ã—ã¦è¨ˆç®—
        const start = new Date(`2000-01-01T${startStr}`);
        let end = new Date(`2000-01-01T${endStr}`);

        // æ—¥ä»˜ã‚’ã¾ãŸãå ´åˆï¼ˆä¾‹: 22:00é–‹å§‹ã€œç¿Œ2:00çµ‚äº†ï¼‰ã®å‡¦ç†
        if (end < start) {
            end.setDate(end.getDate() + 1);
        }

        const diffMs = end - start; // ãƒŸãƒªç§’ã§ã®å·®åˆ†
        const diffMins = Math.floor(diffMs / 60000); // åˆ†ã«å¤‰æ›
        
        // å®Ÿåƒæ™‚é–“ï¼ˆåˆ†ï¼‰ = æ‹˜æŸæ™‚é–“ - ä¼‘æ†©æ™‚é–“
        const workMins = diffMins - breakMins;

        if (workMins <= 0) {
            document.getElementById('resultArea').innerText = "å‹¤å‹™æ™‚é–“ãŒçŸ­ã™ãã¾ã™";
            return;
        }

        // 3. çµ¦ä¸è¨ˆç®— (å˜ç´”è¨ˆç®—)
        // â€»æ­£ç¢ºæ€§ã‚’æœŸã™ãŸã‚ã€ä¸€æ—¦åˆ†å˜ä¾¡ã‚’å‡ºã•ãšã€ç·åˆ†æ•°ã‚’æ›ã‘ã¦ã‹ã‚‰60ã§å‰²ã‚‹
        const totalPay = Math.floor(wage * workMins / 60);

        // 4. çµæœè¡¨ç¤º (3æ¡åŒºåˆ‡ã‚Š)
        document.getElementById('resultArea').innerText = 
            `Â¥${totalPay.toLocaleString()} (${Math.floor(workMins / 60)}æ™‚é–“${workMins % 60}åˆ†)`;
    }
